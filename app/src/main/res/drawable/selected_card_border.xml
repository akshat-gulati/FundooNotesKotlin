<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/fabColour" /> <!-- Black border color -->
            <corners android:radius="22dp" /> <!-- Slightly larger radius for the border -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/generalBackground" /> <!-- Inner content color -->
            <corners android:radius="20dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
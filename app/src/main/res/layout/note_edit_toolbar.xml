<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="7dp">

        <!-- Drawer Button (Left Side) -->
        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/drawer_button"
            android:src="@drawable/back"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:layout_gravity="start" />

        <!-- Right Side Icons -->
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/right_icons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPin"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/screen_layout_toggle"
                android:src="@drawable/pin"
                android:layout_marginEnd="7dp"
                android:gravity="center_vertical"
                app:tint="@color/black" />
            <ImageView
                android:id="@+id/ivReminder"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/profile"
                android:src="@drawable/alarm"

                android:layout_marginEnd="7dp"
                android:gravity="center_vertical"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/ivArchive"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/options"
                android:layout_marginEnd="7dp"
                android:gravity="center_vertical"
                android:src="@drawable/archive"
                app:tint="@color/black" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</LinearLayout>